# -*- shell-script -*-

"CLEARONSTART=1 urxvtcd"
    Mod4 + space
"CLEARONSTART=1 tabbed -c urxvtcd -embed"
    Mod4 + Control + space
# "urxvtcd -pe tabbedex"
#     Mod4 + Control + space

"emacsclient -c"
    Mod4 + e
"emacs"
    Mod4 + Control + e
"thunderbird"
    Mod4 + F9

"zsh -c 'if (( $(xbacklight -get) < 9 )); then xbacklight -set 10; else xbacklight -inc 10; fi'"
    XF86MonBrightnessUp

"zsh -c 'if (( $(xbacklight -get) > 10 )); then xbacklight -dec 10; else xbacklight -set 1; fi'"
    XF86MonBrightnessDown

"xbacklight -set 100"
    Mod4 + XF86MonBrightnessUp

"xbacklight -set 1"
    Mod4 + XF86MonBrightnessDown

"notify-send `xbacklight -get`"
    Mod4 + Control + XF86MonBrightnessUp

"rox"
    Mod4 + Control + grave

"rofi -show window"
    Mod4 + n

"sudo /home/vifon/.bin/mysuspend"
    Mod4 + Shift + F4

"kvm-switch"
    Scroll_Lock

"chromium $(xclip -o)"
    Mod4 + Mod1 + o

"wxmaxima"
    XF86Calculator

"urxvtcd -g 150x32 -e ncmpcpp-run"
    Mod4 + m
"urxvtcd -g 150x32 -e vimpc"
    Mod4 + Shift + m
"urxvtcd -g 80x26 -e youtube-run"
    Mod4 + Control + m
# "amixer set Master toggle &> /dev/null && sleep 0.1 && killall -USR1 i3status"
"amixer -D pulse set Master Playback Switch toggle &> /dev/null && sleep 0.1 && killall -USR1 i3status"
    XF86AudioMute
"amixer set Speaker toggle &> /dev/null && sleep 0.1 && killall -USR1 i3status"
    Mod1 + XF86AudioMute
"amixer set Capture toggle"
    XF86AudioMicMute
# "mpcauth -q volume -5 || amixer set Master 5%- && killall -USR1 i3status"
"amixer -D pulse set Master 5%- && killall -USR1 i3status"
    XF86AudioLowerVolume
# "mpcauth -q volume +5 || amixer set Master 5%+ && killall -USR1 i3status"
"amixer -D pulse set Master 5%+ && killall -USR1 i3status"
    XF86AudioRaiseVolume
"mpcauth -q  prev"
    Mod4 + Control + comma
"mpcauth -q  prev"
    XF86AudioPrev
"mpcauth -q  next"
    Mod4 + Control + period
"mpcauth -q  next"
    XF86AudioNext
"mpcauth -q  stop"
    XF86AudioStop
"mpcauth -q  toggle"
    XF86AudioPlay
"mpcauth -q  toggle"
    Mod4 + grave
"mpcauth -q  toggle"
    Mod4 + slash
"mpcauth -q  stop"
    Mod4 + Control + slash
"mpcauth -q  toggle"
    Mod4 + Escape

"urxvtcd -g 150x50 -e alsamixer"
    Mod4 + XF86AudioMute

"ps xo pid=,command= | dmenu -l 16 | sed 's/\s*\([0-9]\+\) .*/\1/' | xargs kill"
    Mod4 + Pause


"GTK2_RC_FILES=$HOME/.gtkrc-2.0-pidgin pidgin"
    Mod4 + Shift + F9
"urxvtcd -e xmpp-run"
    XF86Messenger
"urxvtcd -e mutt -F ~/.muttrc_pop"
    Mod4 + Control + F8
"urxvtcd -title IRC -e wbd"
    Mod4 + F10
"urxvtcd -title 'IRC [mosh]' -e wbd --mosh"
    Mod4 + Control + F10

"urxvtcd -e sh -c '/usr/bin/locate '\'\'' | fzf | tr -d \\n | xsel -i'"
    XF86Search

"dmenu_launcher"
    XF86Launch1

"dmenu_launcher"
    Mod4 + y

"dmenu_translate -g"
    Mod4 + backslash
"dmenu_translate -g -f pl -t en"
    Mod4 + Shift + backslash
"zsh -c 'urxvt -e less -R =(trans en:pl \"`xsel -o`\")'"
    Mod4 + Control + backslash

"scrot-upload"
    Print
"scrot-upload 1"
    Mod4 + Print
"scrot -s"
    Control + Print
"sleep 0.5 && scrot -s --exec 'mtpaint $f; rm -f $f'"
    Mod5 + Print

"eject /dev/sr0"
    XF86Eject

"vlock -ans"
    Mod4 + Control + i
"i3lock-blur"
    XF86ScreenSaver
"i3lock-blur"
    Control + Shift + Mod4 + l
"i3lock-blur"
    Mod5 + Shift + Mod4 + l
"i3lock-blur -d"
    Control + XF86ScreenSaver

"doublemouse"
    Mod4 + minus

"~/.startup 1"
    Mod4 + Insert

"~/.startup --reset-mouse"
    Mod4 + Control + Insert

"~/.startup 1 && xmodmap -e 'remove control = Control_L' -e 'keycode 37 = Super_L' -e 'add control = Control_L' -e 'add mod4 = Super_L'"
    Mod1 + Control + Insert

"bluetooth-toggle"
    Mod4 + Shift + F5


"powermode powersave+"
    Mod4 + Shift + Next

"powermode powersave"
    Mod4 + Next

"powermode normal"
    Mod4 + Prior

"powermode maxpowuh"
    Mod4 + Shift + Prior


"sleep 0.5 && xset dpms force off"
    Mod4 + Shift + XF86Back

"xbacklight2 save 0"
    Mod4 + XF86Back

"xbacklight2 restore"
    Mod4 + XF86Forward

"xbacklight2 save 100"
    Mod4 + Shift + XF86Forward

"compton-trans -c -o -20"
    Mod4 + Control + minus
"compton-trans -c -o +20"
    Mod4 + Control + equal

"redshift -O 3700"
    Mod4 + Shift + Right
"redshift -O 4500"
    Mod4 + Shift + Down
"redshift -x"
    Mod4 + Shift + Left
